---
import Section from "@/components/Section.astro"
import { volunteer } from "@cv"
---
<Section title="Experience">
    <ul>
        {
            volunteer.map(({organization,position,url,startDate,endDate,summary,highlights }) =>{
            const strYear = new Date(startDate).getFullYear()
            const endYear = endDate!=null ? new Date(endDate).getFullYear() : "Actual"
            const years = `${strYear}-${endYear}`
            return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>{organization}</h3>
                                    <h4>{position}</h4>
                                </div>
                                <time>{years}</time>
                            </header>
                            <footer>
                                <p>{summary}</p>
                            </footer>
                        </article>
                    </li>
                    )  
                }
            )
        }
    </ul>
</Section>
<style>
    ul{
        list-style-type: none;
        display: flex;
        flex-direction: column;
        gap:32px;  
    }
    article h3{
        font-weight: 500;
        color: #111;
    }
    article h4{
        font-weight: 400;
        color: #222;
    }
    header{
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
    time{
        color: #666;
        font-size: 0.85rem;
    }
</style>